<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.dustplanet</groupId>
  <artifactId>silkspawners-parent</artifactId>
  <packaging>pom</packaging>
  <version>7.5.1-SNAPSHOT</version>
  <name>SilkSpawners Parent</name>
  <url>https://dev.bukkit.org/projects/silkspawners/</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <repositories>
    <repository>
      <id>dustplanet</id>
      <url>https://repo.dustplanet.de/artifactory/private</url>
    </repository>
  </repositories>

  <modules>
    <module>modules/API</module>
    <module>modules/v1_8_R3</module>
    <module>modules/v1_11_R1</module>
    <module>modules/v1_12_R1</module>
    <module>modules/v1_13_R2</module>
    <module>modules/v1_14_R1</module>
    <module>modules/v1_15_R1</module>
    <module>modules/v1_16_R1</module>
    <module>modules/v1_16_R2</module>
    <module>modules/v1_16_R3</module>
    <module>modules/v1_17_R1</module>
    <module>modules/v1_18_R1</module>
    <module>modules/v1_18_R2</module>
    <module>modules/v1_19_R1</module>
    <module>modules/v1_19_R2</module>
    <module>modules/v1_19_R3</module>
    <module>modules/v1_20_R1</module>
    <module>modules/v1_20_R2</module>
    <module>modules/SilkSpawners</module>
  </modules>

  <dependencies>
    <dependency>
      <groupId>com.github.spotbugs</groupId>
      <artifactId>spotbugs-annotations</artifactId>
      <version>4.8.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <compilerArgument>-Xlint:all</compilerArgument>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>3.1.1</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>3.0.1</version>
        <configuration>
          <autoVersionSubmodules>true</autoVersionSubmodules>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.6.2</version>
        <configuration>
          <source>1.8</source>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>3.3.1</version>
        <dependencies>
          <dependency>
            <groupId>com.puppycrawl.tools</groupId>
            <artifactId>checkstyle</artifactId>
            <version>8.43</version>
          </dependency>
        </dependencies>
        <configuration>
          <configLocation>https://dustplanet.de/checkstyle.xml</configLocation>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.github.spotbugs</groupId>
        <artifactId>spotbugs-maven-plugin</artifactId>
        <version>4.8.1.0</version>
        <configuration>
          <effort>Max</effort>
          <threshold>Low</threshold>
          <failOnError>true</failOnError>
          <plugins>
            <plugin>
              <groupId>com.h3xstream.findsecbugs</groupId>
              <artifactId>findsecbugs-plugin</artifactId>
              <version>1.12.0</version>
            </plugin>
            <plugin>
              <groupId>com.mebigfatguy.sb-contrib</groupId>
              <artifactId>sb-contrib</artifactId>
              <version>7.6.0</version>
            </plugin>
          </plugins>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.6.1</version>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>3.21.0</version>
        <configuration>
          <targetJdk>1.8</targetJdk>
          <rulesets>
            <ruleset>https://dustplanet.de/pmd.xml</ruleset>
          </rulesets>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

  <scm>
    <url>https://github.com/timbru31/SilkSpawners</url>
    <connection>scm:git:git://github.com/timbru31/SilkSpawners.git</connection>
    <developerConnection>scm:git:git@github.com:timbru31/SilkSpawners.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <ciManagement>
    <url>https://ci.dustplanet.de/job/SilkSpawners</url>
    <system>jenkins</system>
  </ciManagement>

  <distributionManagement>
    <snapshotRepository>
      <id>dustplanet</id>
      <url>https://repo.dustplanet.de/artifactory/libs-snapshot-local</url>
    </snapshotRepository>
    <repository>
      <id>dustplanet</id>
      <url>https://repo.dustplanet.de/artifactory/libs-release-local</url>
    </repository>
  </distributionManagement>
</project>
