<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.dustplanet</groupId>
  <artifactId>SilkSpawners</artifactId>
  <packaging>jar</packaging>
  <version>3.7-SNAPSHOT</version>
  <name>SilkSpawners</name>
  <url>http://dev.bukkit.org/bukkit-plugins/silkspawners/</url>
  <description>Pickup, place and customize Monster Spawners</description>

  <!-- Encode in UTF-8 -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <!-- Repositories -->
  <repositories>
    <repository>
      <id>spigotmc-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/groups/public/</url>
    </repository>
    <repository>
      <id>sk89q-repo</id>
      <url>http://maven.sk89q.com/repo/</url>
    </repository>
    <repository>
      <id>Plugin Metrics</id>
      <url>http://repo.mcstats.org/content/repositories/public</url>
    </repository>
    <repository>
      <id>confuser-repo</id>
      <url>http://ci.frostcast.net/plugin/repository/everything</url>
    </repository>
    <repository>
      <id>Dustplanet Releases</id>
      <name>Dustplanet-releases</name>
      <url>http://repo.dustplanet.de/artifactory/ext-release-local</url>
    </repository>
  </repositories>

  <!-- Dependencies -->
  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.8.8-R0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.sk89q</groupId>
      <artifactId>worldguard</artifactId>
      <version>6.1.1-SNAPSHOT</version>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.mcstats.bukkit</groupId>
      <artifactId>metrics</artifactId>
      <version>R7</version>
      <exclusions>
        <exclusion>
          <groupId>org.bukkit</groupId>
          <artifactId>bukkit</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>net.gravitydevelopment.updater</groupId>
      <artifactId>updater</artifactId>
      <version>2.3</version>
    </dependency>
    <dependency>
      <groupId>me.confuser</groupId>
      <artifactId>BarAPI</artifactId>
      <version>3.3</version>
    </dependency>
    <dependency>
      <groupId>com.massivecraft</groupId>
      <artifactId>massivecore</artifactId>
      <version>2.8.1</version>
    </dependency>
    <dependency>
      <groupId>com.massivecraft</groupId>
      <artifactId>factions</artifactId>
      <version>2.8.1</version>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_5_R1</artifactId>
      <version>v1_5_R1</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_5_R2</artifactId>
      <version>v1_5_R2</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_5_R3</artifactId>
      <version>v1_5_R3</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_6_R1</artifactId>
      <version>v1_6_R1</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_6_R2</artifactId>
      <version>v1_6_R2</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_6_R3</artifactId>
      <version>v1_6_R3</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_7_R1</artifactId>
      <version>v1_7_R1</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_7_R2</artifactId>
      <version>v1_7_R2</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_7_R3</artifactId>
      <version>v1_7_R3</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_7_R4</artifactId>
      <version>v1_7_R4</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_8_R1</artifactId>
      <version>v1_8_R1</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_8_R2</artifactId>
      <version>v1_8_R2</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-v1_8_R3</artifactId>
      <version>v1_8_R3</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>de.dustplanet</groupId>
      <artifactId>SilkSpawners-API</artifactId>
      <version>API</version>
      <type>jar</type>
    </dependency>
  </dependencies>

  <build>
    <finalName>${project.artifactId}</finalName>
    <sourceDirectory>../../src/main/java</sourceDirectory>
    <directory>../../target</directory>

    <!-- Include .yml files -->
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>../../src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
          <include>config.yml</include>
          <include>localization.yml</include>
          <include>mobs.yml</include>
        </includes>
      </resource>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>../..</directory>
        <includes>
          <include>README.md</include>
          <include>LICENSE.md</include>
        </includes>
      </resource>
    </resources>

    <!-- Compile for 1.7 -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <verbose>true</verbose>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>de.dustplanet:SilkSpawners*</include>
                  <include>org.mcstats.bukkit:metrics</include>
                  <include>net.gravitydevelopment.updater:updater</include>
                </includes>
                <excludes>
                  <exclude>de.dustplanet.silkspawners:SilkSpawners-API</exclude>
                </excludes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>net.gravitydevelopment.updater</pattern>
                  <shadedPattern>de.dustplanet.util</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.mcstats</pattern>
                  <shadedPattern>de.dustplanet.util</shadedPattern>
                </relocation>
              </relocations>
              <createDependencyReducedPom>false</createDependencyReducedPom>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>


  <!-- Github information -->
  <scm>
    <url>https://github.com/timbru31/SilkSpawners</url>
    <connection>scm:git:git://github.com/timbru31/SilkSpawners.git</connection>
    <tag>master</tag>
    <developerConnection>scm:git:git@github.com:timbru31/SilkSpawners.git</developerConnection>
  </scm>

  <!-- Jenkins information -->
  <ciManagement>
    <url>https://ci.dustplanet.de/job/SilkSpawners</url>
    <system>jenkins</system>
  </ciManagement>
</project>
